<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Header -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:background="#FFA500"
            android:padding="16dp"
            android:layout_marginBottom="24dp">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="⚙️ Paramètres Enfant"
                android:textSize="24sp"
                android:textStyle="bold"
                android:textColor="#FFFFFF"
                android:gravity="center" />

            <Button
                android:id="@+id/backButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="🔙"
                android:textSize="20sp"
                android:background="@null"
                android:textColor="#FFFFFF"
                android:padding="8dp" />

        </LinearLayout>

        <!-- Child Name Section -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="#F9F9F9"
            android:padding="16dp"
            android:layout_marginBottom="16dp"
            android:elevation="2dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="👶 Nom de l'enfant"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="#FF8C00"
                android:layout_marginBottom="8dp" />

            <EditText
                android:id="@+id/childNameEditText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Entrez le nom de votre enfant"
                android:background="@android:drawable/edit_text"
                android:padding="12dp"
                android:textSize="16sp"
                android:textColor="#000000"
                android:textColorHint="#888888" />

        </LinearLayout>

        <!-- Age Section -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="#F9F9F9"
            android:padding="16dp"
            android:layout_marginBottom="16dp"
            android:elevation="2dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="🎂 Âge de l'enfant"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="#FF8C00"
                android:layout_marginBottom="8dp" />

            <TextView
                android:id="@+id/ageValueTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="8 ans"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="#FFA500"
                android:layout_marginBottom="8dp" />

            <SeekBar
                android:id="@+id/ageSeekBar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:max="12"
                android:progress="5"
                android:progressTint="#FFA500"
                android:thumbTint="#FF8C00" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="4dp">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="3 ans"
                    android:textSize="12sp"
                    android:textColor="#888888"
                    android:gravity="start" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="15 ans"
                    android:textSize="12sp"
                    android:textColor="#888888"
                    android:gravity="end" />

            </LinearLayout>

        </LinearLayout>

        <!-- Difficulty Section -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="#F9F9F9"
            android:padding="16dp"
            android:layout_marginBottom="24dp"
            android:elevation="2dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="🎯 Niveau de difficulté"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="#FF8C00"
                android:layout_marginBottom="8dp" />

            <TextView
                android:id="@+id/difficultyValueTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Facile 🟢"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="#FFA500"
                android:layout_marginBottom="8dp" />

            <SeekBar
                android:id="@+id/difficultySeekBar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:max="2"
                android:progress="0"
                android:progressTint="#FFA500"
                android:thumbTint="#FF8C00" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="4dp">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Facile"
                    android:textSize="12sp"
                    android:textColor="#888888"
                    android:gravity="start" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Difficile"
                    android:textSize="12sp"
                    android:textColor="#888888"
                    android:gravity="end" />

            </LinearLayout>

        </LinearLayout>

        <!-- Save Button -->
        <Button
            android:id="@+id/saveButton"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:text="💾 Sauvegarder"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="#FFFFFF"
            android:background="#FFA500"
            android:elevation="4dp"
            android:layout_marginBottom="16dp" />

        <!-- Info Section -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="#E3F2FD"
            android:padding="16dp"
            android:elevation="1dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ℹ️ Information"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="#1976D2"
                android:layout_marginBottom="8dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Ces paramètres permettent à l'IA d'adapter ses réponses et exercices au niveau de votre enfant. Vous pouvez les modifier à tout moment."
                android:textSize="14sp"
                android:textColor="#424242"
                android:lineSpacingExtra="2dp" />

        </LinearLayout>

    </LinearLayout>

</ScrollView> 